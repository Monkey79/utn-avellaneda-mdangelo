#include <stdio.h>
#include <stdlib.h>

int main(void) {
	printf("la suma da %d",pedirNumeros());
	return EXIT_SUCCESS;
}

int pedirNumeros(){
	int num1 = 0;
	int num2 = 0;
	int result = 0;

	printf("ingrese numero 1: ");
	scanf("%d",&num1);
	printf("ingrese numero 2: ");
	scanf("%d",&num2);
	result = num1 + num2;
	return result;
}
