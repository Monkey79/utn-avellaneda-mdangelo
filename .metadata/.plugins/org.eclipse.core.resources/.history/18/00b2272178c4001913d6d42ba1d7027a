#include <stdio.h>
#include <stdlib.h>

int main(void) {
	int resultado = 0;
	pedirSuma(&resultado);
	printf("la suma da %d",resultado);
	return EXIT_SUCCESS;
}

int pedirSuma(int *resultado){
	int num1 = 0;
	int num2 = 0;
	int result = 0;

	printf("ingrese numero 1: ");
	scanf("%d",&num1);
	printf("ingrese numero 2: ");
	scanf("%d",&num2);
	*resultado = num1 + num2;
	return result;
}
